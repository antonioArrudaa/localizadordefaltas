<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundodash"
    android:orientation="vertical"
    tools:context=".MVC.VIEW.HOME.HomeActivity">

    <ImageView
        android:id="@+id/btn_info"
        android:layout_width="55px"
        android:layout_height="55px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/textViewDataEnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/allerta"
        android:text="enel 2020"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDataEnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_info"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoenel"
                android:layout_width="300dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/enel_logo_nova" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/allerta"
                android:text="LOCALIZADOR DE FALTA"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/logoenel"
                app:layout_constraintStart_toStartOf="@+id/logoenel"
                app:layout_constraintTop_toBottomOf="@+id/logoenel" />

            <ImageView
                android:id="@+id/imageViewInfoColaborador"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@drawable/textviewinfo" />


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageViewInfoColaborador"
                app:layout_constraintTop_toTopOf="@+id/imageViewInfoColaborador"
                app:srcCompat="@drawable/textviewinfo" />


            <ImageView
                android:id="@+id/imageViewStatus_Conexao"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"
                app:srcCompat="@drawable/ic_action_status_on_green" />

            <ImageView
                android:id="@+id/imageViewStatus_Conexao2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"
                app:srcCompat="@drawable/ic_action_status_off_red" />

            <TextView
                android:id="@+id/SetTextViewBRcolaborador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_info_card_br_colaborador"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:fontFamily="@font/allerta"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                tools:text="BR0069963473" />

            <ProgressBar
                android:id="@+id/progressBarBR0L"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:indeterminateTint="@color/laranja_enel"
                app:layout_constraintBottom_toBottomOf="@+id/SetTextViewBRcolaborador"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/SetTextViewBRcolaborador" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewInfoColaborador"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:srcCompat="@drawable/textviewinfo" />

            <TextView
                android:id="@+id/textViewNomeColaborador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/allerta"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="@+id/imageView7"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7"
                tools:text="ANTONIO REBOUÇAS" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/textviewinfo" />

            <TextView
                android:id="@+id/SetTextViewHorarioAcesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/ic_action_horario"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:fontFamily="@font/allerta"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                tools:text="18:00" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:drawingCacheQuality="high"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:srcCompat="@drawable/textviewinfo" />

            <TextView
                android:id="@+id/SetTextViewDataAcesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_dataa"
                android:drawablePadding="8dp"
                android:fontFamily="@font/allerta"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                tools:text="11/11/0000" />

            <ProgressBar
                android:id="@+id/progressBarDATA"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:indeterminateTint="@color/laranja_enel"
                app:layout_constraintBottom_toBottomOf="@+id/SetTextViewDataAcesso"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/SetTextViewDataAcesso" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageViewInfoColaborador"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:srcCompat="@drawable/textviewinfo" />

            <TextView
                android:id="@+id/SetTtextViewStatusConexao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_rede_on"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:fontFamily="@font/allerta"
                android:text="Status "
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewInfoColaborador"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/imageView9"
                app:srcCompat="@drawable/fundobotaolaranja" />


            <TextView
                android:id="@+id/SetTtextViewExite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_exite"
                android:drawingCacheQuality="high"
                android:fontFamily="@font/allerta"
                android:textSize="28sp"

                app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                app:layout_constraintEnd_toEndOf="@+id/imageView11"
                app:layout_constraintStart_toStartOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:srcCompat="@drawable/fundo_spiner_layout" />

            <TextView
                android:id="@+id/SetTtextViewAjustes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_action_ajustes"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:fontFamily="@font/allerta"
                android:text="Ajustes de dados"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

            <ProgressBar
                android:id="@+id/progressBarHORA"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:indeterminateTint="@color/laranja_enel"
                app:layout_constraintBottom_toBottomOf="@+id/SetTextViewHorarioAcesso"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/SetTextViewHorarioAcesso" />

            <Button
                android:id="@+id/btn_consultar"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fundo_btn_redondo"
                android:drawableEnd="@drawable/ic_location_dashboard"
                android:fontFamily="@font/allerta"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="CONSULTAR"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#0F5DA2"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewInfoColaborador"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageViewInfoColaborador"
                app:layout_constraintTop_toBottomOf="@+id/imageViewInfoColaborador" />

            <Button
                android:id="@+id/btn_historico"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fundo_btn_redondo"
                android:drawableEnd="@drawable/ic_historico"
                android:fontFamily="@font/allerta"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="RELATÓRIOS"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#0F5DA2"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_consultar"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/btn_consultar"
                app:layout_constraintTop_toBottomOf="@+id/btn_consultar" />

            <Button
                android:id="@+id/btn_atualiza_ldf"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fundo_btn_redondo"
                android:paddingLeft="10dp"
                android:text="ATUALIZAR LDF"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/azul"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_historico"
                app:layout_constraintStart_toStartOf="@+id/btn_historico"
                app:layout_constraintTop_toBottomOf="@+id/btn_historico" />

            <Button
                android:id="@+id/btn_cadastro_colaborador"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fundo_btn_redondo"
                android:fontFamily="@font/allerta"
                android:paddingLeft="10dp"
                android:text="CAD. COLABORADOR"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/azul"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_atualiza_ldf"
                app:layout_constraintStart_toStartOf="@+id/btn_atualiza_ldf"
                app:layout_constraintTop_toBottomOf="@+id/btn_atualiza_ldf" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>