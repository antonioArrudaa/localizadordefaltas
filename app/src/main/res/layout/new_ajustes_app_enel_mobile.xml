<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundodash">


    <ImageView
        android:id="@+id/btn_configuracoes_voltar"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left" />

    <TextView
        android:id="@+id/textViewDataEnel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/allerta"
        android:text="enel 2020"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerta"
        android:text="AJUSTES"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider8"
        android:layout_width="599dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTelaInicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="260dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView28"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bnt_camera"
                        android:drawingCacheQuality="low"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView31"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/bnt_delete"
                        app:layout_constraintBottom_toBottomOf="@+id/buttonDownloadALM"
                        app:layout_constraintEnd_toEndOf="@+id/editTextNomeAlimentador"
                        app:layout_constraintTop_toTopOf="@+id/buttonDownloadALM" />

                    <ImageView
                        android:id="@+id/imageViewButton_DELETE_DADOS"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView31"
                        app:layout_constraintEnd_toEndOf="@+id/imageView31"
                        app:layout_constraintStart_toStartOf="@+id/imageView31"
                        app:layout_constraintTop_toTopOf="@+id/imageView31"
                        app:srcCompat="@drawable/ic_action_delete" />

                    <ImageView
                        android:id="@+id/imageView29"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView28"
                        app:layout_constraintEnd_toEndOf="@+id/imageView28"
                        app:layout_constraintStart_toStartOf="@+id/imageView28"
                        app:layout_constraintTop_toTopOf="@+id/imageView28"
                        app:srcCompat="@drawable/ic_download" />

                    <ImageView
                        android:id="@+id/imageView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_action_info" />

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/allerta"
                        android:text="AJUSTES DE DOWNLOAD DE DADOS"
                        android:textColor="@color/azul"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView28"
                        app:layout_constraintTop_toTopOf="@+id/imageView28" />

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat"
                        android:text="*Insira o nome do ALM (Alimentador) no campo para baixar os dados para realizar consultas offline."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView45"
                        app:layout_constraintStart_toStartOf="@+id/textView45"
                        app:layout_constraintTop_toBottomOf="@+id/textView45" />

                    <EditText
                        android:id="@+id/editTextNomeAlimentador"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/borda_azul"
                        android:ems="10"
                        android:fontFamily="@font/montserrat"
                        android:hint="DIGITE O ALIMENTADOR AQUI"
                        android:inputType="textPersonName"
                        android:paddingRight="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/azul"
                        android:textColorHint="#757575"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/textView46"
                        app:layout_constraintStart_toStartOf="@+id/imageView28"
                        app:layout_constraintTop_toBottomOf="@+id/textView46" />

                    <TextView
                        android:id="@+id/textView_Mensagem_Dados_Baixado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="DADOS JÁ DISPONÍVEIS PARA CONSULTAS!"
                        android:textColor="@color/laranja_enel"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/imageView31"
                        app:layout_constraintStart_toStartOf="@+id/editTextNomeAlimentador"
                        app:layout_constraintTop_toBottomOf="@+id/editTextNomeAlimentador" />

                    <Button
                        android:id="@+id/buttonDownloadLOCALIZADORES"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/fundobotaoazul"
                        android:drawableRight="@drawable/ic_action_download"
                        android:fontFamily="@font/allerta"
                        android:paddingRight="12dp"
                        android:text="Baixar LDF"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/buttonDownloadRLG"
                        app:layout_constraintEnd_toStartOf="@+id/buttonDownloadRLG"
                        app:layout_constraintStart_toStartOf="@+id/editTextNomeAlimentador"
                        app:layout_constraintTop_toTopOf="@+id/buttonDownloadRLG" />

                    <Button
                        android:id="@+id/buttonDownloadRLG"
                        android:layout_width="125dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/fundobotaoazul"
                        android:drawableRight="@drawable/ic_action_religador"
                        android:fontFamily="@font/allerta"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="  BAIXAR RLG"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/buttonDownloadALM"
                        app:layout_constraintEnd_toStartOf="@+id/buttonDownloadALM"
                        app:layout_constraintTop_toTopOf="@+id/buttonDownloadALM" />

                    <Button
                        android:id="@+id/buttonDownloadALM"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/fundobotaoazul"
                        android:drawableRight="@drawable/ic_action_alimentador"
                        android:paddingRight="12dp"
                        android:text="BAIXAR ALM"
                        android:textSize="16sp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/editTextNomeAlimentador"
                        app:layout_constraintTop_toBottomOf="@+id/editTextNomeAlimentador"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                app:cardBackgroundColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/allerta"
                        android:text="AJUSTES DE RELATÓRIOS DE LDF's."
                        android:textColor="@color/azul"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView16"
                        app:layout_constraintTop_toTopOf="@+id/imageView16" />

                    <TextView
                        android:id="@+id/textView57"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="*Todos os dados de relatorios poderão ser excluidos deste dispositivo aqui."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/textView56"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/textView56"
                        app:layout_constraintTop_toBottomOf="@+id/textView56" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bnt_camera"
                        android:drawingCacheQuality="low"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView37"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
                        app:layout_constraintEnd_toEndOf="@+id/imageView16"
                        app:layout_constraintStart_toStartOf="@+id/imageView16"
                        app:layout_constraintTop_toTopOf="@+id/imageView16"
                        app:srcCompat="@drawable/icon_list_relatorio" />

                    <TextView
                        android:id="@+id/textView_Mensagem_Dados_RELATORIOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:text="RELATÓRIOS NÃO CADASTRADOS."
                        android:textColor="@color/laranja_enel"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/buttonDELETERELATORIOS"
                        app:layout_constraintEnd_toEndOf="@+id/buttonDELETERELATORIOS"
                        app:layout_constraintStart_toStartOf="@+id/buttonDELETERELATORIOS"
                        app:layout_constraintTop_toTopOf="@+id/buttonDELETERELATORIOS" />

                    <Button
                        android:id="@+id/buttonDELETERELATORIOS"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bnt_delete"
                        android:drawableRight="@drawable/ic_action_delete"
                        android:fontFamily="@font/allerta"
                        android:paddingRight="12dp"
                        android:text="APAGAR DADOS DOS RELATÓRIOS"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/textView57"
                        app:layout_constraintStart_toStartOf="@+id/imageView16"
                        app:layout_constraintTop_toBottomOf="@+id/textView57" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonTelaInicial"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fundo_btn_redondo"
        android:drawableRight="@drawable/ic_action_home"
        android:paddingRight="8dp"
        android:text="VOLTAR A TELA INICIAL"
        android:textAlignment="center"
        android:textColor="@color/azul"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDataEnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>